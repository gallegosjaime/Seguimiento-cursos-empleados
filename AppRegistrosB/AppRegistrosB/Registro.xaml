<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRegistrosB.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Registro" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Entry Placeholder="Escribir correo" x:Name="txtEmailReg" Keyboard="Email"></Entry>
            <Entry Placeholder="Escribir la contraseña" x:Name="txtContraReg" IsPassword="True"></Entry>
            <Entry Placeholder="Escribe tu nombre" x:Name="txtNombreReg"></Entry>
            <Entry Placeholder="Escribe tu edad" x:Name="txtEdadReg" Keyboard="Numeric"></Entry>
            <Button Text="Registrarse" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>